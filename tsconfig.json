{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "esnext",
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "jsx": "react-jsx",
      "declaration": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  